# Server
SERVER_HOST=127.0.0.1
SERVER_PORT=8080

# Logging (actix_web, info, debug, warn, error)
RUST_LOG=info,actix_web=info

# SurrealDB connection
# WebSocket endpoint, e.g., 127.0.0.1:8002
SURREALDB_HOST=127.0.0.1:8002
SURREALDB_USER=SURREALDB_USER
SURREALDB_PASS=SURREALDB_PASS
SURREALDB_NAMESPACE=surreal
SURREALDB_DATABASE=task

# Optional: single URL form (if you prefer one env var)
# Example: surrealdb+ws://root:root@127.0.0.1:8002/surreal/task
DATABASE_URL=

# Auth / Security
# Generate a strong random key for production
SECRET_KEY=change_me_please
